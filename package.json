{
	"name": "pinchcss",
	"version": "0.1.1-0",
	"description": "[WORK IN PROGRESS] Pinchcss micro css framework",
	"author": "Eugene Tereshchenko <i@jman.info>",
	"license": "MIT",
	"type": "module",
	"sass": "pinch.scss",
	"style": "pinch.min.css",
	"files": [
		"modules/",
		"*.css",
		"*.scss"
	],
	"engines": {
		"node": ">= 18.0.0",
		"pnpm": ">= 8.0.0"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start": "pnpm run dev",
		"dev": "vite --host",
		"build": "node build/sass.cjs",
		"doc:build": "vite build --mode documentation",
		"doc:preview": "vite preview --mode documentation",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "eslint . --ext .vue,.js,.cjs,.mjs --fix --ignore-path .gitignore",
		"format": "prettier --write modules/ build/ *.cjs *.js *.scss",
		"postversion": "git push && git push --tags"
	},
	"dependencies": {
		"include-media": "^2.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.0",
		"@rushstack/eslint-patch": "^1.3.2",
		"@vitejs/plugin-vue": "^4.3.1",
		"@vue/eslint-config-prettier": "^8.0.0",
		"autoprefixer": "^10.4.15",
		"browserslist": "^4.22.1",
		"eslint": "^8.46.0",
		"eslint-plugin-vue": "^9.16.1",
		"lightningcss": "^1.22.0",
		"prettier": "^3.0.0",
		"sass": "^1.66.1",
		"vite": "^4.4.9",
		"vue": "^3.3.4",
		"vue-router": "^4.2.4"
	}
}
